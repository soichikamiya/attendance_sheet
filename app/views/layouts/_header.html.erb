<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "勤怠システム", root_path, id: "logo" if !logged_in? %>
    <%= link_to "勤怠システム", "/attendance/attendance/#{@current_user.id}", id: "logo" if logged_in? %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップへ", root_path if !logged_in? %></li>
        <li><%= link_to "トップへ", "/attendance/attendance/#{@current_user.id}" if logged_in? %></li>
        <% if logged_in? %>
          <li><%= link_to "ユーザ一覧", users_path if @current_user.admin? %></li>
          <li><%= link_to "基本情報の修正", '/attendance/select_time' if @current_user.admin? %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
  <% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
  <% end %>
</header>